<div id="contentBk" class="clearfix">
            <div id="content">
                <div class="topImg clearfix">
                    <%= image_tag("headers/header_1.jpg", :alt => "Course Listings") %>
                    <p>Student <strong>Listings</strong></p>
                </div>
                <div class="wrapper">
                    <p id="notice"><%= notice %></p>

                            <h1>List of All Students</h1>

                            <table>
                              <thead>
                                <tr>
                                  <th>First Name</th>
                                  <th>Last Name</th>
                                  <th>Degree Type</th>
                                  <th>Courses</th>
                                  <th>Nationality</th>
                                  <th>Email</th>
                                  <th>Phone</th>
                                  <th>Choice of Study</th>
                                  <th colspan="3"></th>
                                </tr>
                              </thead>

                              <tbody>
                                <% @students.each do |student| %>
                                  <tr>
                                    <td><%= student.fname %></td>
                                    <td><%= student.lname %></td>
                                    <td><%= student.level.leveltype %></td>
                                    <td><%= student.course.coursename %></td>
                                    <td><%= student.nationality %></td>
                                    <td><%= student.email %></td>
                                    <td><%= student.phone %></td>
                                    <td><%= student.countryloc %></td>
                                    <td><%= link_to 'Show', student %></td>
                                    <td><%= link_to 'Edit', edit_student_path(student) %></td>
                                    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>

                            <br>

                            <%= link_to 'New Student', new_student_path %>


                    <div class="clear"></div>

                    
                </div>


            </div>
        </div>



























